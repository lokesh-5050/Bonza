  <style>
    * {
      margin: 0;
      padding: 0;
      outline: none;
      box-sizing: border-box;
      -webkit-tap-highlight-color: transparent;
    }

    html,
    body {
      width: 100%;
      height: 100%;
    }

    .main {
      height: 100%;
      width: 100%;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      font-family: "Roboto", sans-serif;
      background: #0a192f;
    }

    .main > form {
      height: 60%;
      width: 40vw;
      position: relative;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      font-family: "Roboto", sans-serif;
      background: transparent;

      box-shadow: 0 0 10px #676767;
      border-radius: 10px;
      border: 2px solid #57dbbc;
    }

    .main > form > p {
      position: absolute;
      top: 0%;
      left: 50%;
      white-space: nowrap;
      font-size: 2rem;
      transform: translate(-50%, -60%);
      color: #57dbbc;
      background: #0a192f;
      padding: 0.5vw;
      font-family: Calibre, "San Francisco", "SF Pro Text", -apple-system,
        system-ui, sans-serif;
      font-weight: 400;
    }

    img {
      width: 10%;
      margin-bottom: 100px;
      animation: key 2s ease-in-out infinite alternate;
      animation-timing-function: linear;
      transform-origin: bottom;

      user-select: none;
    }

    label {
      position: relative;
      margin-bottom: 1vw;
    }

    label input {
      font-family: Calibre, "San Francisco", "SF Pro Text", -apple-system,
        system-ui, sans-serif;
      font-size: 1rem;
      color: #fff;
      background: transparent;

      padding: 1rem 19.2px;
      min-width: 384px;

      border-radius: 4px;
      border: 2px solid #1b2e4a;

      transition: border-color 0.3s ease;
    }

    label input::selection {
      background: #64feda;
    }

    label p {
      color: #f9f9f9;
      font-size: 1rem;
      user-select: none;
      font-family: Calibre, "San Francisco", "SF Pro Text", -apple-system,
        system-ui, sans-serif;

      position: absolute;
      top: 50%;
      transform: translateY(-50%);

      margin-left: 12px;
      padding: 0 6.4px;

      background: #0a192f;

      transition: top 0.2s, font-size 0.2s, color 0.2s;
    }

    label input:not(:placeholder-shown) {
      border-color: #64feda;
    }

    label input:not(:placeholder-shown) + p {
      top: 0;
      font-size: calc(14.4 / 16 * 1rem);
      color: #57dbbc;
    }

    label input:placeholder-shown + p {
      color: #1b2e4a;
    }

    button {
      font-family: Calibre, "San Francisco", "SF Pro Text", -apple-system,
        system-ui, sans-serif;
      font-weight: 500;
      font-size: 1rem;
      user-select: none;

      margin-top: 19px;
      padding: 16px 19.2px;
      min-width: 384px;

      border-radius: 4px;
      background: #f9f9f9;
      border: 2px solid #f9f9f9;
      color: #0a192f;

      transition: all 0.3s ease;
    }

    button:hover {
      cursor: pointer;
      opacity: 0.7;
      transition: all 0.3s ease;
    }
  </style>

  <body>
    <div class="main">
      <form method="post" action="/forgot" id="forgotform">
        <p>Forgot Password</p>
        <label>
          <input id="email" type="text" name="email" />
          <p>Email</p>
        </label>

        <button>Find Me</button>
      </form>
    </div>
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.27.2/axios.min.js"

    <script>
      const imgwrapper = document.querySelector(".imgwrapper");
      const img = document.querySelectorAll(".imgwrapper .imgs img");
      const imgs = document.querySelector(".imgwrapper .imgs");
      const slidebtn = document.querySelectorAll(".slidebtn");
      let current = 0;
      const count = img.length;

      setInterval(() => {
        current++;

        if (current >= count) {
          gsap.to(imgs, { x: 0 });
          current = 0;
        } else {
          gsap.to(imgs, { x: "-=100%" });
        }
      }, 2000);

      function slide(direc) {
        if (direc == "right") {
          current++;

          if (current >= count) {
            gsap.to(imgs, { x: 0 });
            current = 0;
          } else {
            gsap.to(imgs, { x: "-=100%" });
          }
        } else {
          current = current - 1;

          if (current <= 0) {
            gsap.to(imgs, { x: `-${100 * (count - 1)}%` });
            current = count;
          } else {
            gsap.to(imgs, { x: "+=100%" });
          }
        }
      }


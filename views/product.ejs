            </div>
          </div>
        </div>
      </div>
    </div>
    <script>
      function sidebaropen() {
        let tl = gsap.timeline();
        tl.to(".sidebarmain", {
          display: "flex",
        }).to(".sidebar", {
          duration: 0.2,
          ease: Linear.easeInOut,
          x: 0,
        });
      }
      function sidebarclose() {
        let tl = gsap.timeline();
        tl.to(".sidebar", {
          duration: 0.2,
          ease: Linear.easeInOut,
          x: "100%",
        }).to(".sidebarmain", {
          duration: 0.01,
          display: "none",
        });
      }
    </script>
  </body>
